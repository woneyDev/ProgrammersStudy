class Solution {
    public int[] solution(long n) {
        String[] tmp = String.valueOf(n).split("");
        int[] answer = new int[tmp.length];
        int cnt = 0;
        for ( int i = answer.length - 1; i >= 0; i -- ) {
            answer[cnt] = Integer.parseInt(String.valueOf(tmp[i]));
            cnt ++;
        }
        return answer;
    }
}
