import java.util.Arrays;
import java.util.Collections;

class Solution {
    public String solution(String s) {
        String answer = "";
        String[] tmp = s.split("");
        
        Arrays.sort(tmp, Collections.reverseOrder());
        
        for ( int i = 0; i < tmp.length; i ++ ) {
            answer += tmp[i];
        }
        
        return answer;
    }
}
