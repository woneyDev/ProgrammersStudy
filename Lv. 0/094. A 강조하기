class Solution {
    public String solution(String myString) {
        String answer = "";
        myString = myString.toLowerCase();
        for ( int i = 0; i < myString.length(); i ++ ) {
            if ( (String.valueOf(myString.charAt(i))).equals("a") ) {
                answer += "A";
            }else {
                answer += String.valueOf(myString.charAt(i)).toLowerCase();
            }
        }
        return answer;
    }
}
