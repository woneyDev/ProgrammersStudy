class Solution {
    public String[] solution(String[] strArr) {
        String[] answer = new String[strArr.length];
        
        for ( int i = 0; i < answer.length; i ++ ) {
            if ( i % 2 == 0 ) {
                answer[i] = String.valueOf(strArr[i]).toLowerCase();
            } else {
                answer[i] = String.valueOf(strArr[i]).toUpperCase();
            }
        }
        
        return answer;
    }
}
